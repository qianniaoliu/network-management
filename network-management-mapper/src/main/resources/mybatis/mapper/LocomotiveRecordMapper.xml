<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.network.management.mapper.LocomotiveRecordMapper">
    <resultMap id="BaseResultMap" type="LocomotiveRecord">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="vehicle_type" jdbcType="VARCHAR" property="vehicleType" />
        <result column="direction" jdbcType="VARCHAR" property="direction" />
        <result column="section_number" jdbcType="INTEGER" property="sectionNumber" />
        <result column="location" jdbcType="VARCHAR" property="location" />
        <result column="occur_date" jdbcType="TIMESTAMP" property="occurDate" />
        <result column="yn" jdbcType="TINYINT" property="yn" />
        <result column="modified" jdbcType="TIMESTAMP" property="modified" />
        <result column="created" jdbcType="TIMESTAMP" property="created" />
    </resultMap>
    <sql id="Base_Column_List">
        id, vehicle_type, direction, section_number, location, occur_date, yn, modified, created
    </sql>

    <insert id="insert" parameterType="LocomotiveRecord" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into locomotive_record (vehicle_type, direction, section_number, location, occur_date, yn, modified, created
        )
        values (#{vehicleType,jdbcType=VARCHAR},
        #{direction,jdbcType=VARCHAR},
        #{sectionNumber,jdbcType=INTEGER},
        #{location,jdbcType=VARCHAR},
        #{occurDate,jdbcType=TIMESTAMP},
        #{yn,jdbcType=TINYINT},
        #{modified,jdbcType=TIMESTAMP},
        #{created,jdbcType=TIMESTAMP})
    </insert>


    <select id="queryLocomotiveRecords" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from locomotive_record
        limit #{currentIndex}, #{pageSize}
    </select>
</mapper>